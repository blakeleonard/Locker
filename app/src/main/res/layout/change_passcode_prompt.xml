<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/changePasscodePromptLinearLayoutLayoutRoot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/changePasscodePromptTextViewNewPasscode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Passphrase: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/changePasscodePromptEditTextNewPasscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint= "Enter up to 32 characters...">

        <requestFocus />

    </EditText>

    <TextView
        android:id="@+id/changePasscodePromptTextViewConfirmPasscode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Passphrase: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/changePasscodePromptEditTextConfirmPasscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword" />

</LinearLayout>





















